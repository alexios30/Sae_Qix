from fltk import *
from random import*
# Fonction
def dessin_carre(x, y, cote):
    rectangle(x, y, x + cote, y + cote,
               "red", "red", tag='carre')
def qix(x,y):
    image(x,y,'kong.png',largeur=60,hauteur=60,ancrage="center")

if __name__ == "__main__":


    # TODO Style de la fenêtre 

    cree_fenetre(500, 500)
    rectangle(0, 0, 500, 500, 'black', 'black', tag="background")
    rectangle(10, 70, 490, 490, 'white', tag='circuit')

    chaineQix="Quix"
