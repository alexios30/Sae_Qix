    # TODO Déplacements du joueur

    # TODO Les adversaires et leurs déplacements
    mov=0
    x=250
    y=250
    while mov ==0:
        qix(x,y)
        mouvx=x-5
        mouvy=y-5
        if x==250 and y==250:
            x=(randrange(x,mouvx,-5))
            y=(randrange(y,mouvy,-5))
            efface(qix)
            qix(x,y)

    
